<!DOCTYPE html>
<html>
  <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate" />
  <head>
    <link rel="stylesheet" href="style.css">
    <script src=""></script>
  </head>
  <body>
    <dl>
      <dt>MAC address</dt><dd>{{host.mac}}</dd>
      <dt>Hostname</dt><dd>{{config.hostname}}</dd>
      <dt>Active IP address</dt><dd>{{host.ip}}</dd>
      <dt>Configured IP address</dt><dd>{{config.ip}}</dd>
      
      <dt>&nbsp</dt><dd>&nbsp</dd>
      
      <dt>WiFI RSSI</dt><dd>{{host.rssi}}</dd>

      {{#host.ssids}}
        <dt>WiFi SSID</dt><dd>{{name}}&nbsp&nbsp&nbsp({{signal}})</dd>
      {{/host.ssids}}

      {{^host.ssids}}
        <dt>WiFi SSID</dt><dd>No WiFI networks found.</dd>
      {{/host.ssids}}
      
      <dt>&nbsp</dt><dd>&nbsp</dd>

      <dt>CPU frequency</dt><dd>{{host.cpu_freqency}}</dd>
      <dt>Flash size</dt><dd>{{host.flash_size}}</dd>
      <dt>Flash space</dt>
      <dd>{{host.flash_space}} / {{host.flash_size}}&nbsp;&nbsp;({{host.flash_ratio}}%)</dd>
      <dt>Flash speed</dt><dd>{{host.flash_speed}}</dd>
      <dt>Free memory</dt><dd>{{host.free_memory}}</dd>
      <dt>SDK version</dt><dd>{{host.sdk_version}}</dd>
      <dt>Core version</dt><dd>{{host.core_version}}</dd>

      <dt>&nbsp</dt><dd>&nbsp</dd>
      
      <dt>Analogue in</dt><dd>{{io.analogue_in}}</dd>
      <dt>Uptime</dt><dd>{{host.uptime}} seconds</dd>

      <dt>&nbsp</dt><dd>&nbsp</dd>
      
      <dt>Brokers</dt><dd>
        <table>
          <tr class="">
            <th></th>
            <th>service_name</th>
            <th>hostname</th>
            <th>ip</th>
            <th>port</th>
            <th>service valid until</th>
            <th>host valid until</th>
            <th>ipv4 valid until</th>
            <th>success rate</th>
          </tr>
      
          {{#servers.mqtt}} 
          <tr{{#active}} class="highlight"{{/active}}>
              <td>{{active}}</td>
              <td>{{service_name}}</td>
              <td>{{host_name}}</td>
              <td>{{address}}</td>
              <td>{{port}}</td>
              <td>{{service_valid_until}}</td>
              <td>{{host_valid_until}}</td>
              <td>{{ipv4_valid_until}}</td>
              <td>{{sucess_counter}} / {{connection_attempts}}</td>
          </tr>
          {{/servers.mqtt}}
        </table>
      </dd>
      <dt>&nbsp</dt><dd>&nbsp</dd>

      <dt>mDNS decode success rate</dt>
        <dd>{{mdns.buffer_sucess}} / {{mdns.packet_count}}
           &nbsp&nbsp&nbsp{{mdns.success_rate}}%</dd>
      <dt>Largest mDNS packet size</dt>
        <dd>{{mdns.largest_packet_seen}} / {{host.buffer_size}} bytes</dd>
      <dt>&nbsp</dt><dd>&nbsp</dd>
      <dt>Configure</dt><dd><a href="configure">go</a></dd>
    </dl>
  </body>
</html>
